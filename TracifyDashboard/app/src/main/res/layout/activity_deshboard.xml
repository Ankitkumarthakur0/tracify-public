<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".activities.DashboardActivity">

    <!-- ScrollView for the main content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tracify"
                tools:ignore="HardcodedText"
                android:textColor="#1A1A1A"
                android:textSize="32sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_secure"
                    app:tint="#2ECC71" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="All systems normal."
                    android:textColor="#757575"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Find My Device Card (Fixed Constraints for Map) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <!-- Icon -->
                    <ImageView
                        android:id="@+id/imgRadar"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:background="@drawable/find_my_device"
                        android:padding="25dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#2196F3"
                        tools:ignore="ContentDescription"/>

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tvFindTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Find My Device"
                        android:textColor="#1A1A1A"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/imgRadar"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Status Text -->
                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="Last located: Home, mins ago"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/imgRadar"
                        app:layout_constraintTop_toBottomOf="@+id/tvFindTitle" />

                    <!-- FIXED WEBVIEW CONSTRAINTS -->
                    <!-- Isko Icon/Text ke niche set kiya hai aur Width 0dp di hai taki fail sake -->
                    <WebView
                        android:id="@+id/mapWebView"
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        tools:ignore="WebViewLayout"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imgRadar" />

                    <!--FIXED FULL SCREEN BUTTON CONSTRAINTS -->
                    <TextView
                        android:id="@+id/btnFullScreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â›¶ Full Screen"
                        android:textColor="#2196F3"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mapWebView"/>

                    <!--FIXED BUTTON CONSTRAINTS-->
                    <!--Button ko Full Screen Text ke niche laga diya ha-->
                    <Button
                        android:id="@+id/btnLocate"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#2196F3"
                        android:text="Locate Now  >"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        app:cornerRadius="25dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnFullScreen" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <!-- Grid Layout for Controls -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:rowCount="2">

                <!-- 1. Guest Mode Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="60dp"
                            android:background="@drawable/guestmodeicon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Guest Mode"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Limited access profile"
                            android:textColor="#757575"
                            android:textSize="10sp" />

                        <Switch
                            android:id="@+id/switchGuest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="8dp"
                            android:thumbTint="@color/white"
                            app:trackTint="#2196F3"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 2. Airplane Mode Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/airoplane" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Airplane Mode"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Go off the grid"
                            android:textColor="#757575"
                            android:textSize="14sp" />

                        <Switch
                            android:id="@+id/switchAirplane"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="8dp"
                            android:checked="true"
                            android:thumbTint="@color/white"
                            app:trackTint="#2196F3"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 3. Instant Lock Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardInstantLock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/lock" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Instant Lock"
                            android:textColor="#1A1A1A"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Secure device immediately"
                            android:textColor="#757575"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="12dp"
                            android:text="TAP TO LOCK"
                            android:textColor="#2196F3"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 4. Camera Access Card (Red Background) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="#FFCDD2"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Camera Access"
                            android:textColor="#D32F2F"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Currently: BLOCKED"
                            android:textColor="#B71C1C"
                            android:textSize="10sp" />

                        <!-- Red Tint for Switch -->
                        <Switch
                            android:id="@+id/switchCamera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="8dp"
                            android:thumbTint="#D32F2F"
                            app:trackTint="#EF9A9A"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
